<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.epita.android.whatilike.SplashActivity">

    <TextView
        android:text="What I like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WhatILiketv"
        android:textColor="#3399FF"
        android:textStyle="bold|italic"
        android:textSize="30sp"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="An application by Junaid KHALID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/titletv"
        android:textSize="15sp"
        android:layout_below="@+id/WhatILiketv"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="START"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:id="@+id/startbt"
        android:layout_below="@+id/titletv"
        android:layout_centerHorizontal="true"
        android:onClick="MainActivity"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/epita"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Made at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/madeattv"
        android:textSize="15sp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:layout_marginTop="15dp" />

</RelativeLayout>